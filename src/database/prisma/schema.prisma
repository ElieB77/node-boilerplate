generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum USER_ROLES {
  USER
  ADMIN
}

model User {
  id String @id @default(uuid())
  createdAt DateTime @default(now())
  email   String   @unique
  password String
  firstName    String? @db.VarChar(255)
  lastName    String? @db.VarChar(255)
  role USER_ROLES @default(USER)
}
